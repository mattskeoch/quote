{{ 'build-configurator.css' | asset_url | stylesheet_tag }}

<div class="product-configurator" data-configurator>
  <a href="#" class="restart-link" data-restart>
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M14 8c0 3.3-2.7 6-6 6s-6-2.7-6-6 2.7-6 6-6v2l4-3-4-3v2c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8h-2z" fill="currentColor"/>
    </svg>
    Restart
  </a>

  <div class="configurator-logo">
   <a href="https://autospec4x4.com.au/">
    <img src="https://cdn.shopify.com/s/files/1/0580/6050/5263/files/AUTOSPEC4x4_ASPEC_LOGO_RED_BLACK.png?v=1722383489" 
    alt="AutoSpec Logo" width="160"></a>
   </a>
  </div>

  <h1 class="configurator-title">{{ section.settings.configurator_title }}</h1>

  <div class="configurator-progress">
    <div class="progress-bar">
      <div class="progress-fill" data-progress></div>
    </div>
    <div class="step-counter" data-step-counter></div>
  </div>

  <!-- Dynamic step container -->
  <div class="configurator-container" data-configurator></div>

  <div class="total-price-display">
    <div class="price-info">
      <span class="total-price-label">Current Total:</span>
      <span class="total-price-amount" data-current-total>$0.00</span>
    </div>
    <div class="weight-info" data-weight-info>
      <span class="current-weight">Total Weight: <span class="weight-value">0</span> kg</span>
      <span class="separator">|</span>
      <span class="weight-limit">Vehicle GVM: <span class="gvm-value">--</span> kg</span>
    </div>
  </div>
</div>

<div class="quote-modal" id="quoteModal">
  <div class="quote-modal-overlay"></div>
  <div class="quote-modal-content">
    <span class="close-modal">&times;</span>
    <h2>Get Your Quote</h2>
    <form id="quoteForm" class="quote-form">
      <div class="form-group">
        <label for="firstName">First Name *</label>
        <input type="text" id="firstName" name="firstName" required>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name *</label>
        <input type="text" id="lastName" name="lastName" required>
      </div>
      <div class="form-group">
        <label for="email">Email *</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="phone">Phone *</label>
        <input type="tel" id="phone" name="phone" required>
      </div>
      <div class="form-group">
        <label for="state">State *</label>
        <select id="state" name="state" required>
          <option value="">Select a state</option>
          <option value="ACT">Australian Capital Territory</option>
          <option value="NSW">New South Wales</option>
          <option value="NT">Northern Territory</option>
          <option value="QLD">Queensland</option>
          <option value="SA">South Australia</option>
          <option value="TAS">Tasmania</option>
          <option value="VIC">Victoria</option>
          <option value="WA">Western Australia</option>
        </select>
      </div>
      <div class="form-group">
        <label for="vehicleDetails">Tell us about your vehicle</label>
        <textarea id="vehicleDetails" name="vehicleDetails" rows="4" required></textarea>
      </div>
      <button type="submit" class="submit-quote">Submit Quote Request</button>
    </form>
  </div>
</div>

